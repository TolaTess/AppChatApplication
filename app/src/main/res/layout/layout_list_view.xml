<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">


    <ImageView
        android:id="@+id/user_online_icon"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_below="@+id/users_image"
        android:layout_marginStart="105dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/greendot" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/users_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/users_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/aclonica"
        android:maxWidth="180dp"
        android:text="@string/display_name"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/users_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/users_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/actor"
        android:text="@string/user_status"
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

</RelativeLayout>