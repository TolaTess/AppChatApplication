<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/msg_chat_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/msg_text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msg_display_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/message_text_background"
        android:fontFamily="@font/actor"
        android:padding="15dp"
        android:text="TextView"
        android:textAlignment="textStart"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/msg_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/aldrich"
        android:text="@string/display_name"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/msg_display_name"
        android:layout_marginEnd="-50dp"
        android:fontFamily="@font/actor"
        android:text="00.00"
        android:paddingBottom="5dp"
        android:alpha="0.5"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/message_image_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="94dp" />

</RelativeLayout>